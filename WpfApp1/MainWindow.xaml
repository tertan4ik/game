<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="645" Width="976">
    <Window.Background>
        <ImageBrush ImageSource="/pole.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="10" Margin="119,195,0,0" VerticalAlignment="Top" Width="10" RenderTransformOrigin="0.5,0.5" Source="/PlayerBlue.png">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.06"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
            <Image.OpacityMask>
                <ImageBrush ImageSource="/PlayerBlue.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="Player_Yellow" HorizontalAlignment="Left" Height="10" Margin="109,195,0,0" VerticalAlignment="Top" Width="10" Source="/PlayerYellow.png"/>
        <Image x:Name="Player_Brown" HorizontalAlignment="Left" Height="10" Margin="119,205,0,0" VerticalAlignment="Top" Width="10" Source="/PlayerBrown.png"/>
        <Image x:Name="Player_Purple" HorizontalAlignment="Left" Height="10" Margin="109,205,0,0" VerticalAlignment="Top" Width="10" Source="/PlayerPurple.png"/>
        <Button Content="" HorizontalAlignment="Left" Height="33" Margin="723,452,0,0" VerticalAlignment="Top" Width="162" Click="Button_Click">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Label Content="Label" HorizontalAlignment="Left" Margin="723,280,0,0" VerticalAlignment="Top" Height="30" Width="156" />
        <Label Content="Label" HorizontalAlignment="Left" Margin="95,64,0,0" VerticalAlignment="Top" Width="790" Height="28"/>

    </Grid>

</Window>
